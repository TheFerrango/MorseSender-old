<phone:PhoneApplicationPage 
    x:Class="Morse_sender.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="696" 
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

  <!--LayoutRoot is the root grid where all page content is placed-->
  <Grid x:Name="LayoutRoot" Background="Transparent">
    <!--Pivot Control-->
    <controls:Pivot Title="{Binding Path=LocalizedResources.AppName, Source={StaticResource Locales}}">
      <!--Pivot item one-->
      <controls:PivotItem Header="{Binding Path=LocalizedResources.FirstPivot, Source={StaticResource Locales}}">
        <!--Double line list with text wrapping-->
        <StackPanel GotFocus="StackPanel_GotFocus">
          <TextBox HorizontalAlignment="Left" InputScope="Text" Margin="0,0,0,0" Name="txtToMorsefy" Text="{Binding Path=LocalizedResources.TextCode, Source={StaticResource Locales}}" VerticalAlignment="Top" Width="460" TextWrapping="Wrap" AcceptsReturn="True" FontSize="26" TextChanged="txtToMorsefy_TextChanged" MaxHeight="236" />
          <Border Width="450" BorderThickness="1" BorderBrush="White" Margin="0,10,0,0" >
            <ScrollViewer MaxHeight="240">
              <TextBlock Name="lblMorsed" Text="Coop" FontSize="24" Margin="0,0,0,0" TextWrapping="Wrap" />
            </ScrollViewer>
          </Border>
        </StackPanel>
      </controls:PivotItem>

      <!--Pivot item two-->
      <controls:PivotItem Header="{Binding Path=LocalizedResources.SecondPivot, Source={StaticResource Locales}}">
        <!--Triple line list no text wrapping-->
<StackPanel>
          <TextBox HorizontalAlignment="Left" InputScope="Text" Margin="0,0,0,0" Name="morseToTextfy" Text="{Binding Path=LocalizedResources.MorseCode, Source={StaticResource Locales}}" VerticalAlignment="Top" Width="460" TextWrapping="Wrap" AcceptsReturn="True" FontSize="26" TextChanged="morseToTextfy_TextChanged" GotFocus="morseToTextfy_GotFocus" MaxHeight="236" />
          <Border Width="450" BorderThickness="1" BorderBrush="White" Margin="0,10,0,0" >
            <ScrollViewer MaxHeight="240">
              <TextBlock Name="lblTexted" Text="Coop" FontSize="24" Margin="0,0,0,0" TextWrapping="Wrap"/>
            </ScrollViewer>
          </Border>
        </StackPanel>
      </controls:PivotItem>
      <controls:PivotItem Header="{Binding Path=LocalizedResources.ThirdPivot, Source={StaticResource Locales}}">
        <!--Triple line list no text wrapping-->
        <StackPanel >
          <TextBlock  HorizontalAlignment="Left" Margin="0,0,0,0" Name="textBlock1" Text="{Binding Path=LocalizedResources.AppName, Source={StaticResource Locales}}" VerticalAlignment="Top" FontSize="32" />
          <TextBlock Margin="0,0,0,0" Name="textBlock2" Text="{Binding Path=LocalizedResources.AboutText, Source={StaticResource Locales}}" TextWrapping="Wrap"/>
          <TextBlock Margin="0,0,0,0" Name="textBlock3" Text=" " />
          <TextBlock Margin="0,0,0,0" Name="textBlock4" Text="Version 1.0" />


        </StackPanel>
      </controls:PivotItem>
    </controls:Pivot>
  </Grid>

  <!--Sample code showing usage of ApplicationBar-->
  <phone:PhoneApplicationPage.ApplicationBar>
    <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
      <shell:ApplicationBar.MenuItems>
        <shell:ApplicationBarMenuItem Text="Send via SMS" x:Name="sndSMS" Click="sndSMS_Click"/>
        <shell:ApplicationBarMenuItem Text="Send via mail" x:Name="sndMail" Click="sndMail_Click"/>
        <shell:ApplicationBarMenuItem Text="Share on socials" x:Name="postShare" Click="postShare_Click"/>
        <shell:ApplicationBarMenuItem Text="Copy morse to clipboard" x:Name="saveClip" Click="saveClip_Click"/>
      </shell:ApplicationBar.MenuItems>
    </shell:ApplicationBar>
  </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>